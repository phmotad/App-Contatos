<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjetoPH" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="Theme.temaPh" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/cinzaClaro</item>
        <item name="colorSecondary">@color/azulEscuro</item>
        <item name="colorAccent">@color/laranja</item>
        <item name="android:statusBarColor">@color/azulEscuro</item>
        <item name="android:backgroundTint">@color/branco</item>
        <item name="colorOnBackground">@color/branco</item>
        <item name="colorButtonNormal">@color/laranja</item>

    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Cor da borda ao focar -->
        <item name="boxStrokeColor">#FFC107</item>
        <!-- Cor do fundo do campo -->
        <item name="boxBackgroundColor">#333333</item>
        <!-- Cor do hint quando flutuante -->
        <item name="hintTextColor">@color/cinzaClaro</item>
        <!-- Cor da borda ao mostrar erro -->
        <item name="boxStrokeErrorColor">#D32F2F</item>
        <!-- Cor do texto -->
        <item name="android:textColor">@color/branco</item>
    </style>

</resources>